{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"useDefineForClassFields": true,
		"module": "ESNext",
		"rootDir": "./",
		"moduleResolution": "bundler",
		"baseUrl": "src",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js"
	},
	"include": ["src"]
}
